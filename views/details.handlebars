<h1>{{user.first_name}} {{user.last_name}} [{{user.id}}]</h1>
<ul class="list-group">
    <li class="list-group-item">
        <strong>
            Email: {{user.email}}
        </strong>
    </li>
    <li class="list-group-item">
        <strong>
            Phone: {{user.phone}}
        </strong>
    </li>
</ul>

